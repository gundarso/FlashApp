<div class="pickback">
      <div class="row">
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2
 text-center padding-top">
     <div class="card hovercard">
        <div class="useravatar">
            <%= image_tag @shop.picture.url(:medium) %>
        </div>

<%= simple_form_for @shop do |f| %>
  <%= f.error_notification %>

        <div class="card-info"> <span class="card-title"><%= @shop.name %></span>

        </div>
    </div>
        <div class="well margin-left-left">
       <div class="form-inputs">
            <%= f.input :name %>
            <%= f.association :categories, as: :check_boxes %>
            <%= f.input :street_address %>
            <%= f.input :city %>
            <%= f.input :postcode %>
            <%= f.input :country %>
            <%= f.input :phone %>
            <%= f.input :contact_email %>
            <%= f.input :picture %>
          </div>
            <div class ="sizee">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
  </div>
  <%= link_to 'Back to shop profile', shop_path(@shop), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
