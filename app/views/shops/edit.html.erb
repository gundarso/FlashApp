<h1>Edit your shop profile</h1>

<%= simple_form_for @shop do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <div class= "sizee">
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.association :categories, as: :check_boxes %>
            <%= f.input :street_address %>
            <%= f.input :city %>
            <%= f.input :postcode %>
            <%= f.input :country %>
            <%= f.input :opening %>
            <%= f.input :closing %>
            <%= f.input :phone %>
            <%= f.input :contact_email %>
            <%= f.input :picture %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class ="sizee">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>_
