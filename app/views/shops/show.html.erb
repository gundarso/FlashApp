<div class="picturefashion">
      <div class="row">
<div class="col-lg-12 text-center padding-top col-lg-12">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="https://images.unsplash.com/photo-1430375642086-147fcd5fea57?q=80&fm=jpg&s=1cebba51d8f877740ad9ebb7c5861109">
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
            <%= image_tag @shop.picture.url(:medium) %>
        </div>
        <div class="card-info"> <span class="card-title"><%= @shop.name %></span>

        </div>
    </div>
        <div class="well margin-left-right">
      <div class="tab-content">
      <h1>Shop details</h1>
        <strong>Name:</strong> <%= @shop.name %><br>
        <strong>Categories:</strong>
        <ul>
          <% @shop.categories.each do |category| %>
          <li><%= category.name %></li>
          <% end %>
        </ul>
        <strong>Street address:</strong> <%= @shop.street_address %><br>
        <strong>City:</strong> <%= @shop.city %><br>
        <strong>Postcode:</strong> <%= @shop.postcode %><br>
        <strong>Country:</strong> <%= @shop.country %><br>
        <strong>Opening time:</strong> <%= @shop.opening %><br>
        <strong>Closing time:</strong> <%= @shop.closing %><br>
        <strong>Phone:</strong> <%= @shop.phone %><br>
        <strong>Contact email:</strong> <%= @shop.contact_email %><br>

<% if shop_signed_in? %>
<%= link_to 'Edit your shop details', edit_shop_path(@shop), class: "btn btn-primary" %>
<% end %>
        </div>
      </div>
    </div>
  </div>
  </div>

