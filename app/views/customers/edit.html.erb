<div class="pickpick">
      <div class="row">
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2
 text-center padding-top">
     <div class="card hovercard">
        <div class="useravatar">
            <%= image_tag @customer.picture.url(:medium) %>
        </div>


<div class="row">
<div class="text-center">

<div class="card-info"> <span class="card-title"><%= @customer.first_name %></span>
</div>

<h1>Edit your profile</h1>

<%= simple_form_for @customer do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-left">
      <div class="card-block shadowed-box text-center">
        <div class= "sizee">
          <div class="form-inputs">
            <%= f.input :first_name %>
            <%= f.input :family_name %>
            <%= f.input :age %>
            <%= f.input :gender %>
            <%= f.input :base_location %>
            <%= f.association :categories, as: :check_boxes, label: "Categories of interest"%>
            <%= f.input :picture %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class ="sizee">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
    </div>
  </div>
