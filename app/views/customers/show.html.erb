      <div class="row">
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2
 text-center padding-top">
     <div class="card hovercard">
        <div class="useravatar">
            <% if @customer.picture.present? %>
              <%= image_tag @customer.picture.url(:thumb) %>
            <% else %>
              <%= image_tag ("GetNGo1.png") %>
            <% end %>
        </div>
        <div class="card-info"> <span class="card-title"><%= @customer.first_name %></span>
<div class="row">
  <div class="well margin-left-right">
      <div class="tab-content">
            <h3>Base location:</h3> <%= @customer.base_location %><br>
            <h3>Categories of interest:</h3>
            <% @customer.categories.each do |category| %>
            <%= category.name %><br>
            <% end %>
        <% if customer_signed_in? %>
        <%= link_to 'Edit your profile details', edit_customer_path(@customer), class: "btn btn-primary" %>
        <% end %>
        </div>
    </div>
    </div>
  </div>
  </div>
