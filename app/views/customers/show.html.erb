<div class="picturefashion">
      <div class="row">
<div class="col-lg-12 text-center padding-top col-lg-12">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="http://lorempixel.com/100/100/people/9/">
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
            <%#= image_tag @customer.picture.url(:medium) %>
        </div>
        <div class="card-info"> <span class="card-title"><%= @customer.first_name %></span>

        </div>
    </div>
        <div class="well margin-left-right">
      <div class="tab-content">
      <h1>Profile details</h1>
            <strong>Name:</strong> <%= @customer.first_name %><br>
            <strong>Age:</strong> <%= @customer.age %><br>
            <strong>Base location:</strong> <%= @customer.base_location %><br>
            <h3>Categories of interest</h3>
            <strong>Categories:</strong><br>
              <% @customer.categories.each do |category| %>
              <%= category.name %><br>
              <% end %>
        <h3>Edit your profile here</h3>
        <% if customer_signed_in? %>
        <%= link_to 'Edit your profile details', edit_customer_path(@customer), class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>

