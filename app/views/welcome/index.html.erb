    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Welcome To Get'n'Go</div>
                <div class="intro-heading"> Get Flash Sales </div>
                <div class="intro-heading"> Everywhere Every day </div>
                <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
            </div>
        </div>
    </header>

    <!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">About</h2>
                    <h3 class="section-subheading text-muted">GnG enables customers to benefit from nearby flash sales every day</h3>
                    <h3 class="section-heading">How does it work?</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="How-Work">
                        <%= image_tag("Login_computer.png", :alt => "image", width:"126") %>
                    </div>
                    <h4 class="service-heading">1.Register yourself on our site</h4>
                    <p class="text-muted"> In just 3 clicks you'll be logged in and access a rich personalized newsfeed</p>
                    <%= link_to 'Register Now', new_customer_registration_path, class: "btn btn-xl" %>
                    <p><%= link_to 'Register here if you are a shop', new_shop_registration_path %></p>
                  </div>
                <div class="col-md-4">
                        <div class="How-Work">
                        <%= image_tag("Searchpicture.png", :alt => "image", width:"100") %>
                      </div>
                    <h4 class="service-heading">2.Search our flash sales database</h4>
                    <p class="text-muted"> Find what you need at a good price just near you</p>
                </div>
                <div class="col-md-4">
                        <div class="How-Work">
                        <%= image_tag("Shoppicutre.png", :alt => "image", width:"113") %>
                       </div>
                    <h4 class="service-heading">3.Get what you need and go about your business!</h4>
                    <p class="text-muted">Just launch our GPS mode and go quickly get your product </p>
                </div>
            </div>
        </div>
    </section>



